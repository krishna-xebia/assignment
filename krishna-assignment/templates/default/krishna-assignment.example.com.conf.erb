server {
    listen 80;
    listen 443 ssl;
    server_name krishna.example.com;

    ssl on;
    ssl_certificate         /etc/nginx/ssl/krishna.example.com/krishna.example.com.crt;
    ssl_certificate_key     /etc/nginx/ssl/krishna.example.com/krishna.example.com.key;
    ssl_trusted_certificate /etc/nginx/ssl/krishna.example.com/krishna.example.com.ca.crt;

    location / {
        proxy_pass http://192.168.33.15;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

